<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<fx:root type="javafx.scene.layout.BorderPane" xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1">
   <center>
   <GridPane alignment="CENTER" BorderPane.alignment="CENTER">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
        
         <children>
            <VBox prefHeight="200.0" prefWidth="100.0" GridPane.columnIndex="1" GridPane.columnSpan="2">
               <children>
                  <Label fx:id="nomEquipe" />
                  <HBox prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <Label fx:id="label_niveauE" text="Niveau : " />
                        <Label fx:id="niveauE" />
                     </children>
                  </HBox>
                  
                  
               </children>
            </VBox>            <ListView fx:id="listEquipe" prefHeight="200.0" prefWidth="200.0" GridPane.rowIndex="2" GridPane.rowSpan="2" />
            <BorderPane GridPane.columnIndex="1" GridPane.rowIndex="2" GridPane.rowSpan="2">
               <top>
                  <HBox alignment="CENTER" BorderPane.alignment="CENTER">
                     <children>                        
                        <Label fx:id="nom" />
                     </children>
                  </HBox>
               </top>
               <center>
                  <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
                     <children>                        
                        <HBox> 
                           <children>
                              <Label fx:id="label_niveau" text="Niveau : " />
                              <Label fx:id="niveau" />
                           </children>
                        </HBox>
                        <ListView fx:id="listJoueur" prefHeight="200.0" prefWidth="200.0" /> 
                     </children>
                  </VBox>
               </center>
               <bottom>
                  <Button fx:id="btn_affronter" alignment="CENTER" onAction="#affronter" text="Affronter" BorderPane.alignment="CENTER" />
               </bottom>
            </BorderPane>
            <Button  text="Retour" onAction="#retour" BorderPane.alignment="CENTER"  />
         </children>
      </GridPane>
   </center>
</fx:root>
